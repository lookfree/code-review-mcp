{
  "name": "code-review-mcp",
  "version": "1.0.0",
  "description": "MCP服务器用于Java Spring Boot项目代码审查，基于详细的代码质量检查清单",
  "main": "dist/index.js",
  "bin": {
    "code-review-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm run test",
    "release": "npm version patch && npm publish"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-review",
    "java",
    "spring-boot",
    "static-analysis",
    "quality-check"
  ],
  "author": "lookfree",
  "license": "MIT",
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "glob": "^10.3.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/js-yaml": "^4.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lookfree/code-review-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/lookfree/code-review-mcp/issues"
  },
  "homepage": "https://github.com/lookfree/code-review-mcp#readme",
  "publishConfig": {
    "access": "public"
  }
} 